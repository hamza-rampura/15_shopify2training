<h1>{{ section.settings.title }}</h1>
<p>{{ section.settings.subtext_title }}</p>
<div class="my-4">
    {% if section.settings.button_url == blank %}
        {% assign shop_url = shop.secure_url %}
    {% else %}
    {% assign shop_url = section.settings.button_url %}
            
    {% endif %}
    <a href="{{ shop_url }}">Rebase Button</a>
</div>

{% schema %}
{
    "name": "Template 404",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "404",
            "label": "404 Heading title"
        },
        {
            "type": "text",
            "id": "subtext_title",
            "default": "The page that you are looking for is not found.",
            "label": "404 subtext title"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        }
    ]
}
{% endschema %}